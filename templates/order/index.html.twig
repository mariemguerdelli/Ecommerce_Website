{% extends 'base.html.twig' %}

{% block title %}Valider ma commande - E_chry{% endblock %}

{% block content %}
<h2> Je passe ma commande</h2>
<p>Choisissez vos préférences avant de passer votre commande sur la boutique francaise</p>
<hr>
<div class="row">
<div class="col-md-5">
{% set formHtml %}  
{{ form_start(form, {action:path('order_recap')}) }}

     {{ form_label(form.addresses, 'Choisissez votre adresse de livraison') }}
   <a href="{{path('account_address_add')}}">Ajouter une nouvelle adresse</a>
{{ form_end(form) }}
{% endset %}
{{formHtml|replace({'[br]' : '</br>'})|raw }}
</div>

<div class="col-md-6">
<div class="text-center">
<b>Recap de ma commande</b></br>
<p>Retrouvez le récaputilatif de vos produits</p>
</div>
<div class="order-summary">
{% for key,product in cart %}
<div class="row {% if key >0 %}mt-2{% endif %}">
<div class="col-2">
<img src="/uploads/{{product.product.illustration}}" alt="{{ product.product.name }}" height="75px">
</div>
<div class="col-8 my-auto">
<td>{{ product.product.name }}</br>
<small>{{product.product.subtitle}}</small>
</div>
<div class="col-2 my-auto">
x {{ product.quantity }}
</div>
</div>
{% endfor %}
</div>
<b>Bouton pour payer</b>
</div>
</div>

{% endblock %}
